{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
      <div class="col mt-5">
        <h1>Search for Availability</h1>

        <form
          action="/search-availability"
          method="POST"
          class="mt-3 needs-validation"
          novalidate
        >
        <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
          <div id="reservation-dates" class="row">
            <div class="mb-3 col-auto">
              <label for="start" class="form-label">Starting Date</label>
              <input
                required
                type="text"
                class="form-control"
                id="start"
                name="start"
                aria-describedby="startDateHelp"
                placeholder="Arrival Date"
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">
                Please choose a starting date.
              </div>
            </div>

            <div class="mb-3 col-auto">
              <label for="end" class="form-label">Ending Date</label>
              <input
                required
                type="text"
                class="form-control"
                id="end"
                name="end"
                aria-describedby="endDateHelp"
                placeholder="Departure"
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please choose a ending date.</div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">
            Search Availability
          </button>
        </form>
      </div>
    </div>
  </div>
{{end}}

{{define "js"}}
<script>
    const elem = document.getElementById('reservation-dates');
    const rangepicker = new DateRangePicker(elem, {
      format: 'yyyy-mm-dd',
    });
</script>
{{end}}